<% provide(:title, "New Task") %>

<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @task, url: user_tasks_path, local: true) do |f| %>
     <%= render 'shared/error_messages' %>
    
      <%= f.label :task_name %>
      <%= f.text_field :task_name, class: "form-control" %>
      
      <%= f.label :task_details %>
      <%= f.text_area :task_details, class: "form-control", rows: "5" %>
      
      <%= f.submit "新規登録", class: "btn btn-primary btn-form" %>
      
    <% end %>
  </div>
</div>